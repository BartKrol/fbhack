{
  "manifest_version": 2,
  "name": "Facebook Hackathon",
  "description": "Do awesome stuff!",
  "version": "1.0",
  "background_page": "background.html",
  "browser_action": {
    "name": "Manipulate DOM",
    "icons": ["icon.png"],
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "js": [
        "bower_components/dist/jquery.min.js",
        "background.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
